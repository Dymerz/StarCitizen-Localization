{
  "name": "ini-merger",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:merge": "ts-node src/index.ts merge",
    "start:validate": "ts-node src/index.ts validate",
    "watch:merge": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"npx ts-node src/index.ts merge\"",
    "watch:validate": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"npx ts-node src/index.ts validate\"",
    "test": "nyc --reporter html --reporter text --report-dir .nyc_output/summary ts-mocha",
    "test:watch": "ts-mocha --watch",
    "build": "tsc -p ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/ini": "^1.3.31",
    "@types/node": "^20.8.6",
    "commander": "^11.1.0",
    "ini": "^4.1.1",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.1.7"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/sinon": "^17.0.3",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "sinon": "^19.0.2",
    "ts-mocha": "^10.0.0"
  }
}
